<style>
body {
  padding: 0;
  margin: 0;
}

h2 {
  margin: 0;
}
</style>
<%= stylesheet_link_tag "chat" %>
<div id="main">
  <h2>Chat room</h2>
  <div>
    <div id="messages">
      <p class="received">Hello</p>
      <p class="sent">Hi</p>
      <p class="received">How are you doing?</p>
      <p class="sent">I am doing alright</p>
    </div>
    <form id="send_message">
      <input type="text" id="message" name="message">
      <button>Send</button>
    </form>
  </div>
</div>
