<% content_for :head do %>
  <%= google_fonts 'Sacramento' %>
  <style type='text/css'>

    body {
      background: #ffd7ee;
    }

    .screenname {
      background: #ffd7ee !important;
      font-family: 'Sacramento';
      font-size: 22pt;

    }
    .compose-toolbar a {
      color: #fd44ec !important;
    }

    .btn {
      background-color: aqua;
      width: 100%;
      font-size:      16pt;
      height: 60px;
    }
