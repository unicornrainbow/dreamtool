<div class="container">
  <h3>Sections</h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th></th>
        <th>Action</th>
      </tr>
    </thead>
    <% @sections.each do |section| %>
      <tr>
        <td><%= link_to section.name, section %></td>
        <td><%= link_to "Edit", edit_section_path(section) %> /
          <%= link_to "Delete", section, method: :delete, confirm: "Are you sure?" %></td>
      <tr>
    <% end %>
  </table>

  <%= link_to 'New', new_section_path %>
</div>
