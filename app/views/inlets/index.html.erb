<div class="container">
  <h3>Inlets</h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Path</th>
        <th></th>
      </tr>
    </thead>
    <% @inlets.each do |inlet| %>
      <tr>
        <td><%= link_to inlet.name, inlet %></td>
        <td><%= link_to "Edit", edit_inlet_path(inlet) %> /
          <%= link_to "Delete", inlet, method: :delete, confirm: "Are you sure?" %></td>
      <tr>
    <% end %>
  </table>

  <%= link_to 'New', new_inlet_path %>
</div>
