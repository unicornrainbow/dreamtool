<div class="container">
  <h3>Layouts</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>layout</th>
        <th>Actions</th>
      </tr>
    </thead>
    <% @layouts.each do |layout| %>
      <tr>
        <td><%= link_to layout.name, layout %></td>
        <td>
          <%= link_to "Edit", edit_layout_path(layout) %> /
          <%= link_to "Delete", layout, method: :delete, confirm: "Are you sure?" %>
        </td>
      <tr>
    <% end %>
  </table>
  <%= link_to 'New', new_layout_path %>
</div>
